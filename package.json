{
  "name": "bff-connector-api",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "build": "npm run generate && copyfiles -u 1 \"./src/**/*.graphql\" ./build && tsc",
    "clean": "rimraf ./build",
    "format": "prettier --write \"**/*.{graphql,js,json,md,ts,yaml,yml}\"",
    "lint": "eslint --max-warnings 0 \"{src,test}/**/*.ts\"",
    "generate": "graphql-codegen --config codegen.yml",
    "start": "npm run clean && npm run build && concurrently -n Node -c \"cyan.bold\" \"node --inspect=0.0.0.0:9000 ./build/index.js\"",
    "watch": "npm run clean && npm run build -- --incremental && concurrently -k -n TypeScript,Node -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon --inspect=0.0.0.0:9000 --watch ./build ./build/index.js",
    "watch-ts": "tsc -w --incremental --preserveWatchOutput",
    "test": "jest --runInBand --verbose --coverage"
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.0.0",
    "@apollo/server": "^4.7.1",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.4.1",
    "apollo-datasource": "^3.3.2",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "concurrently": "^8.0.1",
    "cors": "^2.8.5",
    "dotenv-cra": "^3.0.3",
    "express": "^4.18.2",
    "fetch-mock": "^9.11.0",
    "find-up": "^6.3.0",
    "graphql": "^16.6.0",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "winston-loggly-bulk": "^3.2.1",
    "winston-transport-sentry-node": "^2.7.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^4.0.1",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/typescript-resolvers": "^3.2.1",
    "@openapitools/openapi-generator-cli": "^2.6.0",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "graphql-tag": "^2.12.6",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "shelljs": "^0.8.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
